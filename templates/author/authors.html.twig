{% extends 'base.html.twig' %}
{% block title %}{{ title }}{% endblock %}
{% block body %}
    <section>
        <article>
            <div class="container">
                {% for author in authors %}
                    <h2 class="text-dark">Name: {{ author.name }}</h2>
                    <img src="{{ author.image }}" alt="here's a photo">
                    <p>Description: {{ author.description | raw}}</p>
                    <a href="{{ path('author', {'id': author.id}) }}" class="btn btn-primary">Go To Detail</a>
                {% endfor %}
            </div>
        </article>
    </section>
{% endblock %}
